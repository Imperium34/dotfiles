/* --- Wofi style --- */
window {
    font-family: "JetBrainsMono Nerd Font", "Font Awesome 6 Free";
    font-size: 14px;
    background-color: alpha(@background, 0.7);;
    border-radius: 10px;
    border: 2px solid @color1;
    background-clip: border-box; 
}

#input {
    margin: 8px;
    padding: 8px;
    border-radius: 6px;
    border: none;
    box-shadow: none;
    background-color: alpha(@color0, 0.8);
    color: @foreground;
}

#input:focus {
    border: 2px solid @color1;
    background-color: alpha(@background, 0.8);
}

#scroll { margin: 0 8px 8px 8px; }

#entry {
    padding: 8px;
    margin: 4px 0;
    border-radius: 6px;
    color: @foreground;
    background-color: transparent;
}

#entry:nth-child(even) {
    background-color: alpha(@foreground, 0.1);
}

#entry:selected {
    background-color: alpha(@color1, 0.7);
    color: @background;
}

#image { margin-right: 32px; }

scrollbar slider {
    background-color: @color3;
    border-radius: 6px;
    min-width: 6px;
    min-height: 6px;
}

scrollbar trough {
    background-color: alpha(@color0, 0.8);
    border-radius: 6px;
    min-width: 6px;
    min-height: 6px;
}
